<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="#fff"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/lotusdark"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/weltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tangerinebold"
        android:text="@string/welcome_to_sukoon"
        android:textColor="@color/colorBlue"
        android:textSize="60sp"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
       />


    <ImageView
        android:id="@+id/launchSplash"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/spalshimg"
        android:layout_below="@+id/weltext"
        android:layout_centerHorizontal="true"
         />

</RelativeLayout>